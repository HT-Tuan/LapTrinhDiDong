<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvA"
            android:text="@string/inputA"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="Nhập giá trị số A"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:background="#32A1A1A1"
            android:id="@+id/inputA"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvB"
            android:text="@string/inputB"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="Nhập giá trị số B"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:background="#32A1A1A1"
            android:id="@+id/inputB"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:text="@string/tinhtoan"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/kq"
            android:text="@string/KetQua"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:background="#32A1A1A1"
            android:hint="Xem kết quả A + B tại đây"
            android:id="@+id/hienthi"
            />
    </LinearLayout>

</LinearLayout>
